<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom de la tâche :"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/editTextTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textViewTaskName" />

    <TextView
        android:id="@+id/textViewPersonInCharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personne en charge :"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Spinner
        android:id="@+id/spinnerPersonInCharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewPersonInCharge"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTaskPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewPersonInCharge"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:id="@+id/textViewTaskPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priorité : "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:id="@+id/editTextTaskPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textViewTaskPriority"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/textViewTaskState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etat : "
        app:layout_constraintTop_toBottomOf="@id/layoutTaskPriority"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Spinner
        android:id="@+id/spinnerTaskState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutTaskPriority"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/textViewTaskState"/>

    <TextView
        android:id="@+id/textViewTaskEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date de fin : "
        app:layout_constraintTop_toBottomOf="@+id/spinnerTaskState"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/editTextTaskEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/textViewTaskEndDate"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description :"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskEndDate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.051" />


    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="274dp"
        android:layout_height="137dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintTop_toBottomOf="@+id/textViewTaskDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/validateTasklModifButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Validate"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cancelTaskModifButton"/>

    <Button
        android:id="@+id/cancelTaskModifButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Cancel"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescription"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/validateTasklModifButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>